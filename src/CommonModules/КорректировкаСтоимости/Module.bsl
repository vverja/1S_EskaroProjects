// Разделяет документы КорректировкаСтоимостиСписанияТоваров, которые сделали движения по нескольким организациям на несколько.
// По одному на каждую организацию
//
Процедура РазделитьДокументыКорректировкаСтоимостиСписания(МассивДокументов) Экспорт
	СписокРегистровУУ = Новый Структура();
	СписокРегистровБУ = Новый Структура();
	СписокРегистровМУ = Новый Структура();
	
	Для Каждого ТекущийДокумент Из МассивДокументов Цикл
		//Если документ проведен только по одному виду учета то остави все как есть
		ВидУчетаДокумента = ПолучитьВидУчетаДокумента(ТекущийДокумент);
		Если НЕ ВидУчетаДокумента = Неопределено Тогда
			Если (ВидУчетаДокумента = "Бух") ИЛИ (ВидУчетаДокумента = "Меж") Тогда 
				Если ЗначениеЗаполнено(ТекущийДокумент.Организация) Тогда
					Продолжить;
				КонецЕсли;
			Иначе
				Продолжить;
			КонецЕсли;
		КонецЕсли;	
		
		ТаблицаДокументовДвижения = Новый ТаблицаЗначений();
		ТаблицаДокументовДвижения.Колонки.Добавить("ВидУчета");
		ТаблицаДокументовДвижения.Колонки.Добавить("Организация");
		ТаблицаДокументовДвижения.Колонки.Добавить("Документ");
		
		НачатьТранзакцию();
		
		//Сформируем документы
		МетаданнныеДокумента = ТекущийДокумент.Метаданные();
		Для Каждого Движение ИЗ МетаданнныеДокумента.Движения Цикл
			Если Метаданные.РегистрыСведений.Содержит(Движение) Тогда
				ВидРегистра = "РегистрСведений";
			ИначеЕсли Метаданные.РегистрыНакопления.Содержит(Движение) Тогда
				ВидРегистра = "РегистрНакопления";	
			ИначеЕсли Метаданные.РегистрыБухгалтерии.Содержит(Движение) Тогда
				ВидРегистра = "РегистрБухгалтерии";	
			КонецЕсли;	

			Если ОбщегоНазначения.РегистрПринадлежитВидамУчета(Движение.Имя, Новый Структура("ОтражатьВУправленческомУчете",Истина)) Тогда
				СписокРегистровУУ.Вставить(Движение.Имя, ВидРегистра);
			ИначеЕсли ОбщегоНазначения.РегистрПринадлежитВидамУчета(Движение.Имя, Новый Структура("ОтражатьВБухгалтерскомУчете",Истина)) Тогда
				СписокРегистровБУ.Вставить(Движение.Имя, ВидРегистра);
			ИначеЕсли ОбщегоНазначения.РегистрПринадлежитВидамУчета(Движение.Имя, Новый Структура("ОтражатьВМеждународномУчете",Истина)) Тогда
				СписокРегистровМУ.Вставить(Движение.Имя, ВидРегистра);
			КонецЕсли;
		КонецЦикла;	
		
		СформироватьДвиженияПоВидуУчета(ТекущийДокумент, "Упр", СписокРегистровУУ, ТаблицаДокументовДвижения);					
		СформироватьДвиженияПоВидуУчета(ТекущийДокумент, "Бух", СписокРегистровБУ, ТаблицаДокументовДвижения, Истина);
		СформироватьДвиженияПоВидуУчета(ТекущийДокумент, "Меж", СписокРегистровМУ, ТаблицаДокументовДвижения, Истина);
		
		Если ТаблицаДокументовДвижения.Количество() > 0 Тогда
			//Изменим текущий документ
			ДокументОбъект = ТекущийДокумент.ПолучитьОбъект();
			Если ТаблицаДокументовДвижения[0].ВидУчета = "Упр" Тогда
				ДокументОбъект.ОтражатьВУправленческомУчете = Истина;
				ДокументОбъект.ОтражатьВБухгалтерскомУчете = Ложь;
				ДокументОбъект.ОтражатьВМеждународномУчете = Ложь;
			ИначеЕсли ТаблицаДокументовДвижения[0].ВидУчета = "Бух" Тогда
				ДокументОбъект.ОтражатьВУправленческомУчете = Ложь;
				ДокументОбъект.ОтражатьВБухгалтерскомУчете = Истина;
				ДокументОбъект.ОтражатьВМеждународномУчете = Ложь;
				ДокументОбъект.Организация = ТаблицаДокументовДвижения[0].Организация;
			ИначеЕсли ТаблицаДокументовДвижения[0].ВидУчета = "Меж" Тогда
				ДокументОбъект.ОтражатьВУправленческомУчете = Ложь;
				ДокументОбъект.ОтражатьВБухгалтерскомУчете = Ложь;
				ДокументОбъект.ОтражатьВМеждународномУчете = Истина;	
				ДокументОбъект.Организация = ТаблицаДокументовДвижения[0].Организация;
			КонецЕсли;	
			
	        ДокументОбъект.Записать(РежимЗаписиДокумента.Запись);
			
			//Зарегистрируем документы в последовательностях
			
			Для Каждого СозданныйДокумент Из ТаблицаДокументовДвижения Цикл
				Если СозданныйДокумент.Документ.ОтражатьВУправленческомУчете Тогда
					НаборЗаписейПоследовательности = Последовательности.ПартионныйУчет.СоздатьНаборЗаписей();
					ОрганизацияДляПоследовательности = Неопределено;
				ИначеЕсли СозданныйДокумент.Документ.ОтражатьВБухгалтерскомУчете  Тогда
					НаборЗаписейПоследовательности = Последовательности.ПартионныйУчетБУ.СоздатьНаборЗаписей();
					ОрганизацияДляПоследовательности = СозданныйДокумент.Организация;	
				Иначе
					Продолжить;	
				КонецЕсли;				
				НаборЗаписейПоследовательности.Отбор.Регистратор.Установить(СозданныйДокумент.Документ);
				
				НоваяЗаписьРегстрации = НаборЗаписейПоследовательности.Добавить();
				НоваяЗаписьРегстрации.Период = КонецМесяца(СозданныйДокумент.Документ.ПериодРегистрации);
				НоваяЗаписьРегстрации.Регистратор = СозданныйДокумент.Документ;
				Если НЕ ОрганизацияДляПоследовательности = Неопределено Тогда
					НоваяЗаписьРегстрации.Организация = ОрганизацияДляПоследовательности;
				КонецЕсли;
				
				НаборЗаписейПоследовательности.Записать(Истина);
			КонецЦикла;
			
			ЗафиксироватьТранзакцию();
		Иначе
			ОтменитьТранзакцию();
		КонецЕсли;
		ОбщегоНазначения.Сообщение("Разделен документ " + Строка(ТекущийДокумент));
	КонецЦикла;	
КонецПроцедуры	

// Определяет строковое представление вида учета документа. Если документ проведен по нескольким видам учета то возвращается Неопределенно
//
Функция ПолучитьВидУчетаДокумента(ДокументСсылка)
	КоличествоВидовУчета = 0;
	ВидУчетаДокумента = Неопределено;
	
	Если ДокументСсылка.ОтражатьВУправленческомУчете Тогда
		КоличествоВидовУчета = КоличествоВидовУчета + 1;
		ВидУчетаДокумента = "Упр";
	КонецЕсли;	
	
	Если ДокументСсылка.ОтражатьВБухгалтерскомУчете Тогда
		КоличествоВидовУчета = КоличествоВидовУчета + 1;
		ВидУчетаДокумента = "Бух";
	КонецЕсли;	
	
	
	Если ДокументСсылка.ОтражатьВМеждународномУчете Тогда
		КоличествоВидовУчета = КоличествоВидовУчета + 1;
		ВидУчетаДокумента = "Меж";
	КонецЕсли;	
	
	Если КоличествоВидовУчета > 1 Тогда
		Возврат Неопределено;
	ИначеЕсли КоличествоВидовУчета = 1 Тогда
		Возврат ВидУчетаДокумента;
	Иначе
		Возврат "";
	КонецЕсли;
КонецФункции	

// Формирует движения по указанному виду учета
