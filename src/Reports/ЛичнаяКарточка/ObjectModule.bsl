	Запрос.УстановитьПараметр("РаботникКадровойСлужбы", Перечисления.ОтветственныеЛицаОрганизаций.РаботникКадровойСлужбы);
	
	ТекстЗапроса = "
	|ВЫБРАТЬ РАЗРЕШЕННЫЕ
	|	ОтветственныеЛицаОрганизации.Должность			КАК ДолжностьОтветственного,
	|	ОтветственныеЛицаОрганизации.ФизическоеЛицо		КАК ФизЛицо, 
	|	ЕстьNULL(ФИООтветственногоЛица.Фамилия, """")	КАК Фамилия,
	|	ЕстьNULL(ФИООтветственногоЛица.Имя,"""")		КАК Имя,
	|	ЕстьNULL(ФИООтветственногоЛица.Отчество,"""")	КАК Отчество
	|
	|ИЗ
	|	РегистрСведений.ОтветственныеЛицаОрганизаций.СрезПоследних(&МоментВремени, СтруктурнаяЕдиница = &Организация И ОтветственноеЛицо = &РаботникКадровойСлужбы) КАК ответственныеЛицаОрганизации
	|ЛЕВОЕ СОЕДИНЕНИЕ
	|	РегистрСведений.ФИОФизЛиц.СрезПоследних(&МоментВремени, ФизЛицо = &РаботникКадровойСлужбы) КАК ФИООтветственногоЛица
	|ПО
	|	ОтветственныеЛицаОрганизации.ФизическоеЛицо = ФИООтветственногоЛица.ФизЛицо
	|
	|";
	
	Запрос.Текст = ТекстЗапроса;
	Выборка = Запрос.Выполнить().Выбрать();	
	Пока Выборка.Следующий() Цикл
		КадровыйРаботник = Выборка;
	КонецЦикла;
	
	Если ЗначениеЗаполнено(КадровыйРаботник) Тогда
		Если КадровыйРаботник.Фамилия <> "" Тогда
			ОбластьДополнительныеСведения.Параметры.ФИОКадровогоРаботника =  Строка(КадровыйРаботник.Фамилия) + " " + Строка(КадровыйРаботник.Имя) + " " + Строка(КадровыйРаботник.Отчество);
		Иначе
			ОбластьДополнительныеСведения.Параметры.ФиоКадровогоРаботника = КадровыйРаботник.ФизЛицо.Наименование;
		КонецЕсли;
			
		ОбластьДополнительныеСведения.Параметры.ДолжностьКадровогоРаботника = КадровыйРаботник.ДолжностьОтветственного;
	КонецЕсли;
	
	ТабДокумент.Вывести(ОбластьШапка);
	ТабДокумент.Вывести(ОбластьОсновныеСведения);
	ТабДокумент.Вывести(ОбластьВоинскийУчет);
	ТабДокумент.Вывести(ОбластьПрофОбразование);
	ТабДокумент.Вывести(ОбластьНазначенияИПеремещения);
	ТабДокумент.Вывести(ОбластьОтпуска);
	ТабДокумент.Вывести(ОбластьДополнительныеСведения);
	
КонецПроцедуры

// Печатает личную карточку указанного Работника по указанной организации
//
// Параметры
//  ДатаОтчета – Дата
//  ОрганизацияОтчета  – Организация
//  РаботникОтчета    – Физическое лицо
//  ПустойБланк  – Булево
//
Процедура ПечатьФорма1995(ТабДокумент, ДатаОтчета,Сотрудник, ОрганизацияОтчета, РаботникОтчета, ПустойБланк=Ложь) Экспорт

	Если ТабДокумент.ВысотаТаблицы>0 Тогда
    	ТабДокумент.ВывестиГоризонтальныйРазделительСтраниц();
	КонецЕсли;	

	Если Не ПустойБланк Тогда
    	РезультатыОсновныеСведения = СформироватьЗапросОсновныеСведения(ДатаОтчета,Сотрудник, ОрганизацияОтчета, РаботникОтчета.ФизЛицо).Выбрать();
		РезультатыЧленыСемьи = СформироватьЗапросЧленыСемьи(ДатаОтчета,РаботникОтчета.ФизЛицо).Выбрать();
		РезультатыВоинскийУчет = СформироватьЗапросВоинскийУчет(ДатаОтчета, РаботникОтчета.ФизЛицо).Выбрать();
		РезультатыНазначения = СформироватьЗапросНазначения(ДатаОтчета, ОрганизацияОтчета, РаботникОтчета).Выбрать();
		РезультатыОтпуска = СформироватьЗапросОтпуска(ДатаОтчета, ОрганизацияОтчета, РаботникОтчета).Выбрать();
	КонецЕсли;

	// запоминаем области макета
	Макет = ПолучитьМакет("П2_от_27_10_1995");
	Макет.КодЯзыкаМакета = "uk";
	ОбластьОсновныеСведения = Макет.ПолучитьОбласть("ОсновныеСведения");
	ОбластьВоинскийУчет = Макет.ПолучитьОбласть("ВоинскийУчет");
	ОбластьНазначенияШапка = Макет.ПолучитьОбласть("НазначенияШапка");
	ОбластьНазначенияСтрока = Макет.ПолучитьОбласть("НазначенияСтрока");
	ОбластьОтпускаШапка = Макет.ПолучитьОбласть("ОтпускаШапка");
	ОбластьОтпускаСтрока = Макет.ПолучитьОбласть("ОтпускаСтрока");
	ОбластьДополнительно = Макет.ПолучитьОбласть("Дополнительно");
	
	Если Не ПустойБланк Тогда
		ДанныеУчебноеЗаведение = "";
		ДанныеДиплом = "";
		Пока РезультатыОсновныеСведения.Следующий() Цикл
			ОбластьОсновныеСведения.Параметры.Заполнить(РезультатыОсновныеСведения);
			ЛетСтажа = 0;
			МесяцевСтажа = 0;
			ДнейСтажа = 0;
			ПроведениеРасчетов.РазобратьРазностьДат(ДатаОтчета,РезультатыОсновныеСведения.ДатаТрудовогоСтажа,ДнейСтажа, МесяцевСтажа, ЛетСтажа);
			ОбластьОсновныеСведения.Параметры.ТрудовойСтаж = Строка(ЛетСтажа) + " р. " + Строка(МесяцевСтажа) + " м. " +Строка(ДнейСтажа) + " д. ";
			ПроведениеРасчетов.РазобратьРазностьДат(ДатаОтчета,РезультатыОсновныеСведения.ДатаБольничногоСтажа,ДнейСтажа, МесяцевСтажа, ЛетСтажа);
			ОбластьОсновныеСведения.Параметры.БольничныйСтаж = Строка(ЛетСтажа) + " р. " + Строка(МесяцевСтажа) + " м. " +Строка(ДнейСтажа) + " д. ";
			ДанныеУчебноеЗаведение = Строка(РезультатыОсновныеСведения.УчебноеЗаведение);
			Если ЗначениеЗаполнено(РезультатыОсновныеСведения.ГодОкончания) Тогда
				ДанныеУчебноеЗаведение = ДанныеУчебноеЗаведение+", рік закінчення "+РезультатыОсновныеСведения.ГодОкончания; 	
			КонецЕсли;
		КонецЦикла;
		
		Если ЗначениеЗаполнено(РезультатыОсновныеСведения.ДокументУвольнения) Тогда
			ТЧ = РезультатыОсновныеСведения.ДокументУвольнения.РаботникиОрганизации.Выгрузить();
			СтрокаТЧ = ТЧ.Найти(РаботникОтчета,"Сотрудник");
			Если СтрокаТЧ = Неопределено Тогда
				Основание = "";
			Иначе
				Основание = ", "+СтрокаТЧ.СтатьяКЗОТ.Наименование;
			КонецЕсли;
		Иначе
			Основание = "";
		КонецЕсли;
		ОбластьОсновныеСведения.Параметры.ДатаИПричина = Формат(РезультатыОсновныеСведения.ДатаУвольненияИзОрг,"ДФ=""дд.ММ.гггг"";ДП="" """)+Основание;
		ОбластьДополнительно.Параметры.ДатаИПричина = Формат(РезультатыОсновныеСведения.ДатаУвольненияИзОрг,"ДФ=""дд.ММ.гггг"";ДП="" """)+Основание;

		
		ОбластьОсновныеСведения.Параметры.Организация = ОрганизацияОтчета.Наименование;
		ОбластьОсновныеСведения.Параметры.ЕДРПОУ = УправлениеКонтактнойИнформацией.ПолучитьКодОрганизации(УправлениеКонтактнойИнформацией.СведенияОЮрФизЛице(ОрганизацияОтчета, ДатаОтчета));

		ОбластьОсновныеСведения.Параметры.ДатаЗаполнения = Формат(ДатаОтчета,"ДФ=""дд.ММ.гггг""");
		ОбластьОсновныеСведения.Параметры.ДанныеУчебноеЗаведение = ДанныеУчебноеЗаведение;
		ОбластьОсновныеСведения.Параметры.МестоРождения = РегламентированнаяОтчетность.ПредставлениеМестаРождения(РезультатыОсновныеСведения.МестоРождения);
		
	    ЧленыСемьи = "";
		Пока РезультатыЧленыСемьи.Следующий() Цикл
			ЧленыСемьи = ЧленыСемьи +" "+РезультатыЧленыСемьи.СтепеньРодства.Наименование+" - "+РезультатыЧленыСемьи.ЧленСемьи.Наименование;
			Если ЗначениеЗаполнено(РезультатыЧленыСемьи.ДатаРожденияФизЛица) Тогда
				ЧленыСемьи = ЧленыСемьи+" ("+Формат(РезультатыЧленыСемьи.ДатаРожденияФизЛица,"ДФ=""дд.ММ.гггг""")+")";
			КонецЕсли;
		КонецЦикла;
	    ОбластьОсновныеСведения.Параметры.ЧленыСемьи = ЧленыСемьи;
	КонецЕсли;	
	ТабДокумент.Вывести(ОбластьОсновныеСведения);
	ТабДокумент.ВывестиГоризонтальныйРазделительСтраниц();

	Если Не ПустойБланк Тогда
		Пока РезультатыВоинскийУчет.Следующий() Цикл
	        ОбластьВоинскийУчет.Параметры.Заполнить(РезультатыВоинскийУчет);

			// Особенности заполнения некоторых полей карточки
	        ОбластьВоинскийУчет.Параметры.ПолнаяГодность = "" + РезультатыВоинскийУчет.Годность + " " + РезультатыВоинскийУчет.ОснованиеНегодности;
			Если 	РезультатыВоинскийУчет.Состав = Перечисления.СоставыВоеннослужащих.МладшиеОфицеры
				или РезультатыВоинскийУчет.Состав = Перечисления.СоставыВоеннослужащих.СтаршиеОфицеры
				или РезультатыВоинскийУчет.Состав = Перечисления.СоставыВоеннослужащих.ВысшиеОфицеры
			Тогда
			    ОбластьВоинскийУчет.Параметры.Состав = РезультатыВоинскийУчет.Профиль;
			КонецЕсли;
			Если РезультатыВоинскийУчет.ОтношениеКВоинскойОбязанности = Перечисления.ОтношениеКВоинскойОбязанности.Призывник Тогда
				ОбластьВоинскийУчет.Параметры.Группа = РезультатыВоинскийУчет.ОтношениеКВоинскойОбязанности;
			КонецЕсли; 
		КонецЦикла;	
	КонецЕсли;	
	ТабДокумент.Вывести(ОбластьВоинскийУчет);
 	
    ТабДокумент.Вывести(ОбластьНазначенияШапка);
    Если Не ПустойБланк Тогда
		Пока РезультатыНазначения.Следующий() Цикл
	        ОбластьНазначенияСтрока.Параметры.Заполнить(РезультатыНазначения);
			ОбластьНазначенияСтрока.Параметры.Приказ = ОбщегоНазначения.СформироватьЗаголовокДокумента(ОбластьНазначенияСтрока.Параметры.Приказ);
			ТабДокумент.Вывести(ОбластьНазначенияСтрока);
		КонецЦикла;	
	Иначе
		Для Сч=1 По 10 Цикл
		   ТабДокумент.Вывести(ОбластьНазначенияСтрока);
	    КонецЦикла; 
	КонецЕсли;   

    ТабДокумент.Вывести(ОбластьОтпускаШапка);

	Если Не ПустойБланк Тогда
		Пока РезультатыОтпуска.Следующий() Цикл
	        ОбластьОтпускаСтрока.Параметры.Заполнить(РезультатыОтпуска);
			ОбластьОтпускаСтрока.Параметры.Приказ = ОбщегоНазначения.СформироватьЗаголовокДокумента(ОбластьОтпускаСтрока.Параметры.Приказ);
			ОбластьОтпускаСтрока.Параметры.ЗаПериод = Формат(РезультатыОтпуска.РабочийПериодНачало,"ДФ=""дд.ММ.гггг""")+" - "+Формат(РезультатыОтпуска.РабочийПериодОкончание,"ДФ=""дд.ММ.гггг"""); 
			ОбластьОтпускаСтрока.Параметры.ВидОтпуска = РезультатыОтпуска.ВидОтпуска.ВидОтпускаДляФормОтчетности;
			//ОбластьОтпускаСтрока.Параметры.ВидОтпуска = РезультатыОтпуска.ПричинаОтсутствия;
			ТабДокумент.Вывести(ОбластьОтпускаСтрока);
		КонецЦикла;	
   	Иначе
		Для Сч=1 По 10 Цикл
		   ТабДокумент.Вывести(ОбластьОтпускаСтрока);
	    КонецЦикла; 
	КонецЕсли;   

	ТабДокумент.Вывести(ОбластьДополнительно);
	
	//УниверсальныеМеханизмы.НапечататьДокумент(ТабДокумент);
	

КонецПроцедуры // Печать()

