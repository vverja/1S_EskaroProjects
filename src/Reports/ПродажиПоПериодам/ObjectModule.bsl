			мСтруктураПредставлениеПолей.Вставить("Цена_" + Формат(Индекс, "ЧЦ=2; ЧВН=; ЧГ=0"), ТипыЦен.Получить(Индекс - 1).Представление);
			
		КонецЕсли;
		
	КонецЦикла;
	
